# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bus-tracking
NODE_ENV=development
PORT=3000

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com

# SMS Configuration (Twilio - optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Mapping APIs (Free Options)
# OpenStreetMap/Nominatim (Free - no key needed)
NOMINATIM_URL=https://nominatim.openstreetmap.org

# MapBox (Free tier - 50k requests/month)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Google Maps (Free tier with credits)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# LocationIQ (Free tier - 5k requests/day)
LOCATIONIQ_ACCESS_TOKEN=your-locationiq-access-token

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# OTP Configuration
OTP_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS=3
